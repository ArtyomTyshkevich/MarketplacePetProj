@model IEnumerable<MarketplacePetProj.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<style>
    body {
        background-color: #121212; /* Цвет фона страницы */
        color: #fff; /* Цвет текста */
    }

    .card {
        background-color: #1e1e1e; /* Цвет фона карточки */
        color: #fff; /* Цвет текста внутри карточки */
        border: 1px solid #333; /* Граница карточки */
    }

    .card-img-top {
        height: 44vh; /* Задаем высоту в 44% от высоты экрана */
        object-fit: contain; /* Уменьшаем фотографию так, чтобы она полностью входила в рамку */
    }

    .card-body {
        position: relative; /* Устанавливаем позицию относительно для карточки */
    }

    .product-price {
        position: absolute; /* Устанавливаем абсолютное позиционирование для цены */
        top: 10px; /* Положение сверху */
        right: 5px; /* Положение справа */
        background-color: rgba(255, 255, 255, 0.1); /* Цвет фона с небольшой прозрачностью */
        padding: 5px 10px; /* Отступы вокруг цены */
        border-radius: 5px; /* Закругление углов */
    }

    .add-to-cart-btn {
        position: absolute; /* Устанавливаем абсолютное позиционирование для кнопки */
        bottom: 5px; /* Положение снизу */
        left: 50%; /* Центрируем кнопку по горизонтали */
        transform: translateX(-50%); /* Сдвигаем кнопку влево на половину ее ширины */
    }

    .btn-primary {
        background-color: #007bff; /* Цвет кнопки */
        border-color: #007bff; /* Цвет границы кнопки */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Цвет кнопки при наведении */
            border-color: #0056b3; /* Цвет границы кнопки при наведении */
        }
</style>

<div class="row row-cols-1 row-cols-md-2">
    @foreach (var product in Model)
    {
        <div class="col mb-4">
            <div class="card h-100">
                <div>
                    @if (!string.IsNullOrEmpty(product.ImageFileName))
                    {
                        <img src="~/productImage/@product.ImageFileName" class="card-img-top img-fluid" alt="Product Image">
                    }
                </div>
                <div class="card-body d-flex flex-column position-relative">
                    <h5 class="card-title flex-grow-1">@product.Name</h5>
                    <span class="product-price">@product.Price $</span>
                    <a href="@Url.Action("AddToCart", "Cart", new { id = product.Id })" class="btn btn-primary add-to-cart-btn">Добавить в корзину</a>
                </div>
            </div>
        </div>
    }
</div>