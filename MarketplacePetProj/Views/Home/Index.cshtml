@using Microsoft.AspNetCore.Identity
@model IEnumerable<MarketplacePetProj.Models.Product>
@{
    ViewData["Title"] = "Products";
}
@inject SignInManager<Client> SignInManager



<div class="row row-cols-1 row-cols-md-2">
    @foreach (var product in Model)
    {
        <div class="col mb-4">
            <a asp-controller="Home" asp-action="ProductPage" asp-route-id="@product.Id" class="card-link">
                <div class="card h-100">
                    <div>
                        @if (!string.IsNullOrEmpty(product.ImageFileName))
                        {
                            <img src="~/productImage/@product.ImageFileName" class="card-img-top img-fluid" alt="Product Image">
                        }
                    </div>
                    <div class="card-body d-flex flex-column position-relative">
                        <h5 class="card-title flex-grow-1">@product.Name</h5>
                        <div><span class="product-price">@product.Price $</span>
                    </div>
                        <div class="btn-group w-100 mt-auto" role="group">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-controller="Home" asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger w-25 mr-2">
                                    <i class="bi bi-trash3"></i>
                                    Удалить
                                </a>

                                <a asp-controller="Home" asp-area="" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-secondary w-25 mr-2">
                                    Изменить
                                </a>
                                <a asp-controller="Home" asp-action="Basket" asp-route-id="@product.Id" class="btn btn-warning w-25">
                                    Добавить в корзину
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>